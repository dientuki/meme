:ruby
  overlay = ['#970018', '#e00038','#e84e1b','#ed7511','#f3c423','#9cc43f','#75932f','#007f76','#6ac0c2','#04b1ff','#0073a4','#2b406b','#6b2449','#d64892','#2d2d2d','#7b7b7b','#ffffff']
  
%form#meme-editor-view
  
  %fieldset.upload-image
    
    .upload-wrapper
      .form-input
        #dropzone Arrastrar imagen
      .form-input
        %label{:for => "image"} Subir imagen
        %input#image{:name => "image", :type => "file"}
      
    #meme-canvas-view
      #meme-canvas
        %noscript Lo sentimos, esta herramienta requiere un navegador moderno. Prueba Google Chrome.
  
  
  %fieldset
    %legend Imagen
    
    .form-input
      %label.form-title{:for => "image-scale"} Ajustar tamaño
      %input#image-scale{:max => "4", :min => ".01", :step => ".01", :type => "range", :value => "1"}
    
    .form-input
      %label.form-title{:for => "aspect-ratio"} Proporciones
      %select#aspect-ratio
    
    .items-group.form-input
      .form-title Color
      %ul#overlay.clearfix
        %li
          %label.form-title{:for=>'overlay-none'} Ninguno
          %input#overlay-none{:name => "overlay", :type => "radio", :value => ""}
        - overlay.each_with_index do |element, index|
          %li
            %input{:id=>"overlay-#{index}", :name => "overlay", :type => "radio", :value =>element}
            %label.form-title{:for=>"overlay-#{index}"}= element

    .form-input
      %label.form-title{:for => "background"} Fondo
      %select#background
        %option{:disabled => "disabled"} Ninguno    
  
  %fieldset
    %legend Texto

    .form-input
      %label.form-title{:for => "headline"} Títular
      %textarea#headline{:name => "headline"}

    .form-input
      %label.form-title{:for => "credit"} Fuente
      %input#credit{:name => "credit", :type => "text"}
    
    .form-input
      %label.form-title{:for => "font-family"} Tipografía
      %select#font-family
  
    .two-columns
      
      .form-input
        %label.form-title{:for => "text-align"} Alineación
        %select#text-align
      
      .form-input
        %label.form-title{:for => "font-size"} Tamaño
        %select#font-size
    
    
    .form-input.checkbox-group
      .checkbox-item
        %label.form-title{:for => "text-shadow"} Sombra
        %input#text-shadow{:name => "shadow", :type => "checkbox"}
      
    
  %fieldset
    %legend Extra
    
    .form-input
      %label.form-title{:for => "watermark"} Logo
      %select#watermark
        %option{:disabled => "disabled", :value => ""} Ninguno

    .form-input
      %label.form-title{:for => "ribbon"} Barra
      %select#ribbon
        %option{:disabled => "disabled", :value => ""} Ninguna

    #emojis.items-group
      .form-title Emojis
      %ul.clearfix
        %li
          %label.form-title Ninguno
          %input{:name => "emojis-none", :type => "radio", :value => ""}  
  
    .form-input
      %label.form-title{:for => "emojis-align"} Posición emojis
      %select#emojis-align.text-align
          
          
  %a#meme-download{:href=>"#", :title=>"Descargar imagen",:download => "share.png"} Descargar imagen          